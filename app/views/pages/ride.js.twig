document.addEventListener("DOMContentLoaded", function(event) {
    new Chart(document.getElementById("ride-chart"), {
        type: "line",
        data: {
            labels: ["{{ ride_name }}"],
            datasets: [{
                label: "Wait Time",
                fill: false,
                data: [0{% for wait in waits %}, {{ wait.wait_time }}{% endfor %}],
                borderWidth: 1,
                borderColor: "rgba(255, 0, 0)"
            }]
        },
        responsive: true
    })
});