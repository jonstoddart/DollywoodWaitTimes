document.addEventListener("DOMContentLoaded", function(event) {
    new Chart(document.getElementById("ride-chart"), {
        type: "line",
        data: {
            labels: [{% for wait in waits %}"{{ wait.formatted_created_at }}",{% endfor %}],
            datasets: [{
                label: "{{ ride_name }}",
                fill: false,
                data: [{% for wait in waits %}{{ wait.wait_time }},{% endfor %}],
                borderWidth: 1,
                borderColor: "rgba(229, 44, 44, 1)",
                pointHoverBackgroundColor: "rgba(229, 44, 44, 1)",
                backgroundColor: "rgba(229, 44, 44, 1)"
            }]
        },
        responsive: true
    })
});